@model HomeViewModel;
@{
    ViewData["Title"] = "Pizza!";
}

<div class="text-center">
    <h1 class="display-4">Build your pizza</h1>
</div>

<div class="row">
    <div class="col-12">
        <form asp-controller="Orders" asp-action="Order">
            <div class="row">
                <div class="col-6">
                <table>
                    <thead>
                    <th>Topping</th>
                    </thead>
                    <tbody>
                    @for (int i = 0; i < Model.Toppings.Count; i++)
                    {
                        <tr>
                            <td>
                                <input class="form-check-input" type="checkbox"
                                       asp-for="Toppings[i].Selected"/>
                                <label class="form-check-label" asp-for="Toppings[i].Selected">
                                    @Model.Toppings[i].Name
                                </label>
                                <input type="hidden" asp-for="Toppings[i].Id"/>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
                </div>
                <div class="col-6">
                <table>
                    <thead>
                    <th>Crust</th>
                    </thead>
                    <tbody>
                    @for (int i = 0; i < Model.Crusts.Count; i++)
                    {
                        <tr>
                            <td>
                                <label class="form-check-label">
                                    <input class="form-check-input" type="radio" value="@Model.Crusts[i].Id"
                                           asp-for="SelectedCrust"/>
                                    @Model.Crusts[i].Name
                                </label>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
                </div>
            </div>
            <button class="btn btn-success" type="submit">Place order</button>
        </form>
    </div>
</div>